{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": "xo",
  "overrides": [
    {
      "extends": [
        "xo-typescript"
      ],
      "files": [
        "*.ts",
        "*.tsx" 
      ],
      "rules": {
        "object-curly-spacing": ["error", "always"],
        "@typescript-eslint/object-curly-spacing": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
  }
}